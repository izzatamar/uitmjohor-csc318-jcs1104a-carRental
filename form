				<script>

				
				function validate()
				{
					if(document.arts.name.value == "")
					{
						window.alert("Please Enter Name !");
						document.arts.name.focus();
						return false;
					}
					
					
					
					if( (document.arts.num.value == "") || isNaN(document.arts.num.value))
					{
						window.alert("Enter Contact Number !");
						document.arts.num.focus();
						return false;
					
					}
					var x = document.arts.email.value;
					var atpos = x.indexOf("@");
					var dotpos = x.lastindexOf(".");
					if((x == " "|| atpos < 1 || dotpos < atpos + 2 || dotpos + 2 >= x.length))
					{
						window.alert("Please Enter a valid Email ");
						document.arts.email.focus();
						return false;
					}
					
					
						
					
					
					
				}
				
				

		</script>
				</script>
				
			
				
